<% if(typeof errors != 'undefined') { %>  <!---noy burdaki bilgiler register.js include den geliyor-->
    <% errors.forEach(function(error){ %>
        <!--dismissible alert for register error-->
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= error.msg %>  <!-- %= javascript komut çıktısını, html'e output yapmak için kullanılır  -->
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% }); %>
<% } %>